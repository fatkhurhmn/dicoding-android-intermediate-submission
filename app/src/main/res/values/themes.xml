<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryAppLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_500</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Title.Auth">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="Text.Title.Main">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Title.Create">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Content">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Text.Content.Main">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.Auth">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Button.Create">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>